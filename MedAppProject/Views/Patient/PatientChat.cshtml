<!DOCTYPE html>
@{
	Layout = null;
}
<html lang="en">
<head>

	<meta charset="utf-8">
	
	<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">


	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="~/assets/css/bootstrap.min.css">

	<!-- Fontawesome CSS -->
	<link rel="stylesheet" href="~/assets/plugins/fontawesome/css/fontawesome.min.css">
	<link rel="stylesheet" href="~/assets/plugins/fontawesome/css/all.min.css">

	<!-- Feathericon CSS -->
	<link rel="stylesheet" href="~/assets/css/feather.css">

	<!-- Main CSS -->
	<link rel="stylesheet" href="~/assets/css/custom.css">

</head>
<body class="chat-page">

	<!-- Main Wrapper -->
	<div class="main-wrapper">

		<!-- Header -->
		@Html.Partial("/Views/Patient/NavBar.cshtml")
		<!-- /Header -->
		<!-- Page Content -->
		<div class="content top-space">
			<div class="container-fluid px-0">
				<div class="row">
					<div class="col-xl-12">
						<div class="chat-window">

							<!-- Chat Left -->
							<div class="chat-cont-left" style="margin-top:-213px">
								<div class="chat-header">
									<span>Chats</span>
									<a href="javascript:void(0)" class="chat-compose">
										<i class="material-icons"></i>
									</a>
								</div>
								<form class="chat-search">
									<div class="input-group">
										<div class="input-group-prepend">
											<i class="fas fa-search"></i>
										</div>
										<input type="text" class="form-control rounded-pill" placeholder="Search">
									</div>
								</form>
								<div class="chat-users-list">
									<div class="chat-scroll">
										<a href="javascript:void(0);" class="media read-chat d-flex">
											<div class="media-img-wrap flex-shrink-0">
												<div class="avatar avatar-away">
													<i class="fa-solid fa-message" style="color: #669af4;"></i>
												</div>
											</div>
											<div class="media-body flex-grow-1">
												<div>
													<div class="user-name">MedApp</div>
													<div class="user-last-chat">Welcome to MedApp</div>
												</div>
												<div>
													<div class="last-chat-time block"><!--fill here-->Date,time</div>
												</div>
											</div>
										</a>
									</div>
								</div>
							</div>
							<!-- /Chat Left -->
							<!-- Chat Right -->
							<div class="chat-cont-right">
								<div class="chat-header">

									<div class="media d-flex">
										<div class="media-img-wrap flex-shrink-0">
											<div class="avatar ">
												<i class="fa-regular fa-user fa-2xl" style="color: #5c92f0; margin-top:25px"></i>
											</div>
										</div>
										<div class="media-body flex-grow-1">
											<div class="user-name">MedApp</div>
										</div>
									</div>

								</div>
								<div class="chat-body">
									<div class="chat-scroll">
										<ul class="list-unstyled">
											<li class="media sent d-flex">
												<div class="media-body flex-grow-1">
													<div class="msg-box">
														<div>
															<p>Welcome to MedApp</p>
															<ul class="chat-msg-info">
																<li>
																	<div class="chat-time">
																		<span>time</span>
																	</div>
																</li>
															</ul>
														</div>
													</div>
												</div>
											</li>
										</ul>
									</div>
								</div>
								<div class="chat-footer">
									<div class="input-group">

										<input type="text" class="input-msg-send form-control rounded-pill" placeholder="Type something">
										<button type="button" class="btn msg-send-btn rounded-pill ms-2"><i class="fab fa-telegram-plane"></i></button>
									</div>
								</div>
							</div>
							<!-- /Chat Right -->

						</div>
					</div>
				</div>
				<!-- /Row -->

			</div>

		</div>
		<!-- /Page Content -->



	</div>
	<!-- /Main Wrapper -->
	<!-- jQuery -->
	<script src="~/assets/js/jquery-3.6.4.min.js"></script>

	<!-- Bootstrap Core JS -->
	<script src="~/assets/js/bootstrap.bundle.min.js"></script>

	<!-- Custom JS -->
	<script src="~/assets/js/script.js"></script>

</body>
</html>