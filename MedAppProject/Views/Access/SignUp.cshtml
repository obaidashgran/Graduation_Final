											<div class="text-end">
													<a class="forgot-link" asp-action="Login" asp-controller="Access">Already have an account?</a>
											</div>
												<button class="btn btn-primary w-100 btn-lg login-btn" type="submit" style="background-color:dodgerblue">Signup</button>

										</form>
										<!-- /Register Form -->
									</div>
									<!--/Doc Reg-->
								   

